<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckActivity">

    <Button
        android:id="@+id/tempbtn"
        android:layout_width="286dp"
        android:layout_height="75dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:gravity="center"
        android:onClick="Tempbtn"
        android:text="Check Distance"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="73dp" />

    <Button
        android:id="@+id/humiditybtn"
        android:layout_width="280dp"
        android:layout_height="92dp"
        android:layout_below="@id/tempbtn"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:gravity="center"
        android:onClick="humiditybtn"
        android:text="Check Temperature/humidity"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="249dp" />

    <Button
        android:id="@+id/watertempbtn"
        android:layout_width="286dp"
        android:layout_height="87dp"
        android:layout_below="@id/humiditybtn"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:gravity="center"
        android:onClick="watertempbtn"
        android:text="Check water "
        android:textSize="15dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="420dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="541dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="46dp"
        android:onClick="Logout"
        android:text="Logout" />
</RelativeLayout>