<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >

    <!-- TODO: Update blank fragment layout -->
    <TextView
    android:id="@+id/text_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:textAlignment="center"
    android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/tempbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:gravity="center"
        android:text="Check Temperature"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="73dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/humiditybtn"
        android:layout_width="312dp"
        android:layout_height="80dp"
        android:layout_below="@id/tempbtn"
        android:layout_margin="60dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:gravity="center"
        android:text="Check humidity"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="249dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/earthtempbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/humiditybtn"
        android:layout_margin="60dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:gravity="center"
        android:text="Check earth Temperature"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="420dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>